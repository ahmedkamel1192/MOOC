<p id="notice"><%= notice %></p>

<h1>Lectures</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Attachment</th>
      <th scope="col">course</th>

      <th colspan="3" scope="col">action</th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.attachment %></td>
        <td><%= lecture.course.title %></td>

        <td><%= link_to 'Show', lecture , :class =>'btn btn-success'%></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture), :class =>'btn btn-info' %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' }, :class =>'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecture', new_lecture_path, :class =>'btn btn-warning' %>
